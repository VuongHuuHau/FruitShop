<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Hình ảnh sản phẩm -->
    <ImageView
        android:id="@+id/imgHinhAnh"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop" />

    <!-- Tên sản phẩm -->
    <TextView
        android:id="@+id/tvTenSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgHinhAnh"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentTop="true" />

    <!-- Mô tả sản phẩm -->
    <TextView
        android:id="@+id/tvMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTenSP"
        android:layout_toEndOf="@id/imgHinhAnh"
        android:textSize="14sp" />

    <!-- Giá sản phẩm -->
    <TextView
        android:id="@+id/tvGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMoTa"
        android:layout_toEndOf="@id/imgHinhAnh"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark" />

    <!-- Dấu ba chấm -->
    <ImageView
        android:id="@+id/imgMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_more_vert"
        android:contentDescription="@string/menu_options" />

</RelativeLayout>